{
  "name": "@readme/oas-extensions",
  "description": "A list of extensions that ReadMe has added to extend the OpenAPI Specification",
  "version": "17.0.1",
  "author": "Jon Ursenbach <jon@readme.io>",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/readmeio/oas-extensions.git"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .js,.ts",
    "prebuild": "rm -rf dist/",
    "prepack": "npm run build",
    "prepare": "husky install",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.{js,ts}\"",
    "release": "npx conventional-changelog-cli -i CHANGELOG.md -s && git add CHANGELOG.md",
    "test": "nyc mocha \"test/**/*.test.ts\""
  },
  "peerDependencies": {
    "oas": "^20.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@readme/eslint-config": "^10.1.1",
    "@readme/oas-examples": "^5.7.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.26.0",
    "eslint-plugin-mocha": "^10.0.4",
    "husky": "^8.0.1",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.8.3"
  },
  "prettier": "@readme/eslint-config/prettier",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        0,
        "always",
        "Infinity"
      ]
    }
  }
}
